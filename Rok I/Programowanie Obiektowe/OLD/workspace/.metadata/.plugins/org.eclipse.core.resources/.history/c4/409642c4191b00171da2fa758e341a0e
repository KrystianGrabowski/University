
public class Main {

	/**
	 * @param args
	 */
	public static void main(String[] args) 
		{
			int[] T = {4,2,3,1};

	        MergeSort sort = new MergeSort(T, 0, 3); 
	        sort.start();
	        
	        try
	        {
	        	sort.join();
	        }
	        catch(Exception e) {}
	        
	        for(int i = 0; i < 4; i++) System.out.println(T[i]);
		}
}
